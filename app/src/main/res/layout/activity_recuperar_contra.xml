<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Activity.recuperar_contra">

    <EditText
        android:id="@+id/correo_recuperar"
        android:layout_width="wrap_content"
        android:layout_height="50sp"
        android:layout_marginTop="84dp"
        android:background="@drawable/border_text"
        android:ems="14"
        android:hint="@string/es_correo"
        android:inputType=""
        android:paddingLeft="5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="120dp"
        android:layout_height="51dp"
        android:layout_marginTop="36dp"
        android:text="Ingrese su correo Electronico"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/boton_recuperar"
        android:layout_width="400dp"
        android:layout_height="82dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/boton_pres1"
        android:text="@string/Guardar_Continuar"
        android:textColor="#000"
        app:backgroundTint="@color/white"
        app:iconTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/correo_recuperar" />
</androidx.constraintlayout.widget.ConstraintLayout>