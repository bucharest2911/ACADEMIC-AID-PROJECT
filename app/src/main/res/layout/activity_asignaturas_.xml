<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Activity.Asignaturas_Activity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ciencias basicas"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="18sp"/>

            <ImageButton
                android:id="@+id/bt_ciencias_basicas"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/ciencia"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp">


                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <CheckBox
                                android:id="@+id/c_matematicas_t"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:button="@color/transparente"
                                android:background="@drawable/radio_selecter"
                                android:textAlignment="center"
                                android:layout_marginLeft="6dp"
                                android:layout_marginRight="6dp"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:text="matematicas" />

                            <CheckBox
                                android:id="@+id/c_fisica_t"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:button="@color/transparente"
                                android:background="@drawable/radio_selecter"
                                android:textAlignment="center"
                                android:layout_marginLeft="6dp"
                                android:layout_marginRight="6dp"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:text="fisica" />

                            <CheckBox
                                android:id="@+id/c_quimica_t"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:button="@color/transparente"
                                android:background="@drawable/radio_selecter"
                                android:textAlignment="center"
                                android:layout_marginLeft="6dp"
                                android:layout_marginRight="6dp"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:text="quimica" />

                            <CheckBox
                                android:id="@+id/c_sociales_t"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:button="@color/transparente"
                                android:background="@drawable/radio_selecter"
                                android:textAlignment="center"
                                android:layout_marginLeft="6dp"
                                android:layout_marginRight="6dp"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:text="sociales" />

                            <CheckBox
                                android:id="@+id/c_biologia_t"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:button="@color/transparente"
                                android:background="@drawable/radio_selecter"
                                android:textAlignment="center"
                                android:layout_marginLeft="6dp"
                                android:layout_marginRight="6dp"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:text="biologia" />




                        </LinearLayout>

                    </HorizontalScrollView>
                </ScrollView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="programacion"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

                <ImageButton
                    android:id="@+id/bt_programacion"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/programacion"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp">


                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <CheckBox
                                    android:id="@+id/c_html_t"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:button="@color/transparente"
                                    android:background="@drawable/radio_selecter"
                                    android:textAlignment="center"
                                    android:layout_marginLeft="6dp"
                                    android:layout_marginRight="6dp"
                                    android:textStyle="bold"
                                    android:textSize="18sp"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"
                                    android:text="html" />

                                <CheckBox
                                    android:id="@+id/c_java_t"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:button="@color/transparente"
                                    android:background="@drawable/radio_selecter"
                                    android:textAlignment="center"
                                    android:layout_marginLeft="6dp"
                                    android:layout_marginRight="6dp"
                                    android:textStyle="bold"
                                    android:textSize="18sp"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"
                                    android:text="java" />

                                <CheckBox
                                    android:id="@+id/c_java_script_t"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:button="@color/transparente"
                                    android:background="@drawable/radio_selecter"
                                    android:textAlignment="center"
                                    android:layout_marginLeft="6dp"
                                    android:layout_marginRight="6dp"
                                    android:textStyle="bold"
                                    android:textSize="18sp"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"
                                    android:text="java_script" />

                                <CheckBox
                                    android:id="@+id/c_php_t"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:button="@color/transparente"
                                    android:background="@drawable/radio_selecter"
                                    android:textAlignment="center"
                                    android:layout_marginLeft="6dp"
                                    android:layout_marginRight="6dp"
                                    android:textStyle="bold"
                                    android:textSize="18sp"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"
                                    android:text="php" />

                                <CheckBox
                                    android:id="@+id/c_css_t"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:button="@color/transparente"
                                    android:background="@drawable/radio_selecter"
                                    android:textAlignment="center"
                                    android:layout_marginLeft="6dp"
                                    android:layout_marginRight="6dp"
                                    android:textStyle="bold"
                                    android:textSize="18sp"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"
                                    android:text="css" />

                                <CheckBox
                                    android:id="@+id/c_phython_t"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:button="@color/transparente"
                                    android:background="@drawable/radio_selecter"
                                    android:textAlignment="center"
                                    android:layout_marginLeft="6dp"
                                    android:layout_marginRight="6dp"
                                    android:textStyle="bold"
                                    android:textSize="18sp"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"
                                    android:text="phython" />




                            </LinearLayout>

                        </HorizontalScrollView>
                    </ScrollView>


                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/guardar_asignatura"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Guardar y aceptar" />
            </LinearLayout>

        </LinearLayout>





    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>